<% @films["result"]["event"].each do |film| %>
<div class="col-xs-12" onClick="document.location='/films/filminfo/<%= film["id"].to_i %>'">
<h3><%= film["name"] %></h3>
<div class="col-xs-12 col-sm-2">
<%= image_tag(film["details"]["poster"]["image"][0]["url"])%>
</div>
<div class="col-xs-12 col-sm-10">
<p><%= film["description"] %></p>
</div>
</div>
<% end %>

