<% @result["result"]["event"].each do |film| %>

<h3><%= film["name"] %></h3>

<div class="col-xs-12 col-md-6"><%= video_tag(film["details"]["trailer"], size:"450x300")%></div>

<div class="col-xs-12 col-md-6">
<p>Description: <%= film["description"] %></p>

<p>Actors: <%= film["details"]["actors"] %></p>
<p>Directors: <%= film["details"]["director"] %></p>
<p>Genres: <%= film["details"]["genres"] %></p>
</div>

<div class="col-xs-12">
<ul class="nav nav-tabs" role="tablist" id="myTab">
 
 <li class="active"><a href="#clock" role="tab" data-toggle="tab">время</a></li>
 
 <li><a href="#kino" role="tab" data-toggle="tab">кинотеатр</a></li>
 
</ul>



<div class="tab-content">
  
<div class="tab-pane active" id="clock">clock</div>
  
<div class="tab-pane" id="kino">kino</div>
  
</div>



<script>
  $(function () {
    $('#myTab a:last').tab('show')
  })
</script>
</div>
<% end %>
