<% @result["result"]["event"].each do |film| %>

<h3><%= film["name"] %></h3>


<div class="col-xs-12 col-md-6"><%= video_tag(film["details"]["trailer"], size:"450x300")%></div>

<div class="col-xs-12 col-md-6">
<p>Описание: <%= film["description"] %></p>
<p>Актеры: <%= film["details"]["actors"] %></p>
<p>Режиссеры: <%= film["details"]["director"] %></p>
<p>Жанры: <%= film["details"]["genres"] %></p>
<p>Страны: <%= film["details"]["country"] %></p>
<p>Дата релиза: <%= film["details"]["releaseDate"] %></p>
<p>Оригинальное название: <%= film["details"]["englishName"] %></p>
<p>Продолжительность:<%= film["details"]["duration"] %></p>
</div>


<div class="col-xs-12">
 <ul class="nav nav-tabs" role="tablist"> 
  <li class="active"><a href="#clock" role="tab" data-toggle="tab">время</a></li> 
  <li><a href="#kino" role="tab" data-toggle="tab">кинотеатр</a></li> 
 </ul>
 <div class="tab-content">
  	<div class="tab-pane active col-xs-12" id="clock">
   	<% film["details"]["schedules"]["schedule"].each do |fil| %>
    	<div class="col-xs-12 col-sm-6 col-md-3">
<div>
<%= fil["cinema"]["namePlace"] %>
<%= fil["cinema"]["address"]["address"] %>
</div>
<div>
<a target="_blank" href="http://<%= fil["cinema"]["webPages"][0] %>"><%= fil["cinema"]["webPages"][0] %></a>
</div>		
		<div>
		<% fil["halls"]["hall"].each do |fi| %>
    		
			<% fi["hours"]["sessions"].each do |f| %>
			       	<%= Time.at(f["hour"].to_i).strftime("%H:%M") %>
					<% if f["threeD"] == true %>
					3D
					<% end %>
			<% end %>
		
<% end %>
		
</div>		
<% fil["cinema"]["contacts"].each do |f| %>
         <div><%= f["contact"]["comment"] %> - 8 (<%= f["contact"]["code"] %>) <%= f["contact"]["value"] %></div>
      <% end %>	
	</div>
   	<% end %>
	</div>
   
  
  <div class="tab-pane col-xs-12" id="kino">
   <% film["details"]["schedules"]["schedule"].each do |fil| %>
   <div class="col-xs-12 col-sm-6 col-md-3"><div>
     <%= fil["cinema"]["namePlace"] %>
     <%= fil["cinema"]["address"]["address"] %>
   </div>
   <div>
     <a target="_blank" href="http://<%= fil["cinema"]["webPages"][0] %>"><%= fil["cinema"]["webPages"][0] %></a>
   </div>
    <% fil["cinema"]["contacts"].each do |f| %>
         <div><%= f["contact"]["comment"] %> - 8 (<%= f["contact"]["code"] %>) <%= f["contact"]["value"] %></div>
      <% end %>	
	</div>     
    <% end %>
</div> 
</div> 
<div class="col-xs-12">
<% film["details"]["filmShots"]["images"].each_with_index do |fim, index| %>
 <% if index<4 %>
  <%= image_tag(fim["image"][0]["url"])%>
 <% end %>  
<% end %>
<a id="all" >Показать еще</a>
<div id="imge" style="display:none">
<% film["details"]["filmShots"]["images"].each_with_index do |fim, index| %>
 <% if index>3 %>
  <%= image_tag(fim["image"][0]["url"])%>
 <% end %>  
<% end %>
</div>
</div>
<% end %>
<script>
onclick=function(){
document.getElementById("imge").style.display="block"
document.getElementById("all").style.display="none"
}
</script>